{
  "name": "@tobes31415/console-logger",
  "version": "2.0.2",
  "description": "Formats console logs while preserving stack trace info",
  "type": "module",
  "main": "lib/log-commonjs.min.js",
  "module": "lib/index.js",
  "types": "lib/console-logger.d.ts",
  "exports": {
    ".": "./lib/console-logger.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-s clean build:tsc build:fix-imports2",
    "build:tsc": "tsc --declaration",
    "build-and-test": "run-s build  test:vitest",
    "build:fix-imports2": "fix-tsc-esnext-imports bin",
    "test:vitest": "vitest run bin",
    "bundle": "run-s bundle-cjs bundle-esm build:fix-lib-imports",
    "bundle-cjs": "esbuild src/index.ts --format=cjs  --bundle --outfile=lib/log-commonjs.min.js",
    "bundle-esm": "esbuild src/index.ts src/util.ts src/console-logger.ts  --format=esm --outdir=lib",
    "build:fix-lib-imports": "fix-tsc-esnext-imports lib",
    "type-defs": "run-p copy:dts flowgen remove-tests-from-lib",
    "remove-tests-from-lib": "del-cli lib/*test*",
    "copy:dts": "cpy \"bin/**/*.d.ts\" \"lib\"",
    "flowgen": "run-p flowgen:*",
    "flowgen:index": "flowgen bin/index.d.ts -o lib/index.js.flow --add-flow-header",
    "flowgen:util": "flowgen bin/util.d.ts -o lib/util.js.flow --add-flow-header",
    "flowgen:console-logger": "flowgen bin/console-logger.d.ts -o lib/console-logger.js.flow --add-flow-header",
    "assemble": "run-s build-and-test bundle type-defs apidocs post-clean",
    "clean": "run-p pre-clean:* post-clean:*",
    "post-clean": "run-p post-clean:*",
    "pre-clean:docs": "del-cli docs",
    "pre-clean:lib": "del-cli lib",
    "post-clean:bin": "del-cli bin",
    "post-clean:docs_bin": "del-cli docs_bin",
    "apidocs": "run-s apidocs:clean apidocs:typedoc",
    "apidocs:clean": "del-cli docs",
    "apidocs:typedoc": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts --excludePrivate --excludeExternals ",
    "prettier": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "console",
    "log",
    "format"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tobes31415/console-logger"
  },
  "author": "Jake Tober",
  "license": "MIT",
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.1.0",
    "esbuild": "^0.20.2",
    "fix-tsc-esnext-imports": "^1.0.5",
    "flowgen": "^1.21.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^4.0.0",
    "typescript": "~5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@tobes31415/basic-observables": "^2.0.1"
  }
}
